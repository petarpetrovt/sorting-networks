		[Benchmark]
		public void SN_Fixed_Comparable()
		{
			int length = Length;
			int maximumLength = Count - length;

			for (int i = 0; i < maximumLength; i += length)
			{
				SNBoseNelson.Sort<#= i #>Ascending(ref _iterationItems[i]);
			}
		}
		
		[Benchmark]
		public void SN_Fixed_Branchless()
